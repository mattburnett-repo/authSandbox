    link(rel='stylesheet', type="text/css", href='../../../style.css') 
  body
    #main
      form(action="/auth/logout" method="POST")
        div.label Auth Sandbox App Surface
          if message
            div.flash-message
              p= message
        div.app-surface-content
            p.bold response.user._id: 
            p= response.user._id
            p.bold response.user.accessLevel (possible values are user / editor / admin. Change these in db/model/user.model.ts):
            p= response.user.accessLevel
            p.bold response.message:
            p= response.message
        button(type="submit") Log Out
